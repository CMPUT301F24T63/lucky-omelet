<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/facility_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:hint="Facility Name" />

    <EditText
        android:id="@+id/facility_description_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:hint="Facility description" />

    <EditText
        android:id="@+id/facility_location_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:hint="facility location" />


    <Button
        android:id="@+id/facility_edit_finish_button"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Finish" />
</LinearLayout>
