<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/return_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/del_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_del"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="72dp"
        android:text="Event Title"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/poster"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:srcCompat="@tools:sample/avatars[5]" />

    <TextView
        android:id="@+id/event_detail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Detailed Information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poster" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alignmentMode="alignBounds"
        android:columnCount="2"
        android:padding="16dp"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_detail">

        <Button
            android:id="@+id/show_map_button"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:text="Show Map"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="525dp" />

        <Button
            android:id="@+id/event_edit_button"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:text="Edit"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="477dp" />

        <Button
            android:id="@+id/manage_member_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Members"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="525dp" />

        <Button
            android:id="@+id/qr_code_button"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:text="QR Code"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="477dp" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
