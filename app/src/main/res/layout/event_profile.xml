<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageButton
        android:id="@+id/return_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="72dp"
        android:text="Event Title"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="628dp"
        android:layout_marginEnd="68dp"
        android:text="Upload Poster"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/poster"
        android:layout_width="292dp"
        android:layout_height="274dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:srcCompat="@tools:sample/avatars[5]" />

    <TextView
        android:id="@+id/Event_detail"
        android:layout_width="253dp"
        android:layout_height="106dp"
        android:layout_marginTop="16dp"
        android:text="Detailed Information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poster" />

    <Button
        android:id="@+id/Entrant_join_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Event"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="547dp" />

    <Button
        android:id="@+id/Event_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="570dp" />

    <Button
        android:id="@+id/show_map_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Map"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="628dp" />

    <Button
        android:id="@+id/manage_member_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Member"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="554dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
